<html lang="en">
<%- include("./partials/header.ejs") %>

    <body>
        <br>
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">New Task</h2>
                    <span class="text-light">Create your new task below!</span>
                </div>

                <!-- add task form -->

                <form action="/api/task" method="POST" id="add_task">
                    <div class="new_task">
                        <div class="form-group">
                            <label id="label" for="title" class="text-light">Name</label>
                            <input type="hidden" name="id" value="">
                            <input type="text" name="title" value="" placeholder="get something ">
                        </div>
                        <br><br>
                        <div class="form-group">
                            <label for="description" class="text-light">Description</label>
                            <input type="text" name="description" value="" placeholder="some description">
                        </div>
                        <br><br>
                        <div class="form-group">
                            <button id="submit" type="submit" class="btn text-dark update">Save</button>
                        </div>

                    </div>

                </form>
            </div>
        </main>

    </body>
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
<script src="/index.js"></script>

</html>